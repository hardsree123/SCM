@model IEnumerable<SCM.Business.DbModel.Requirements>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            List of requests
        </header>
        <p>
            <a class="btn btn-primary" asp-action="Create" role="button">Add new request</a>
        </p>

        <table class="table table-striped table-advance table-hover">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Age
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Mobile
                    </th>
                    <th>
                        Due date
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Volunteer assigned
                    </th>
                    <th>
                        Status
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequirerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequirementDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.RequestDueDate)
                        </td>
                        <td>
                            @if (item.Priority.Equals(0))
                            {
                                <i class="icon_clock_alt"></i>
                            }
                            else if (item.Priority.Equals(102001) || item.Priority.Equals(102002))
                            {
                                <i class="icon_lightbulb" style="color:red" data-toggle="tooltip" data-placement="right" title="Immediate and urgent"></i>
                            }
                            else if (item.Priority.Equals(102003))
                            {
                                <i class="icon_lightbulb" style="color:orange" data-toggle="tooltip" data-placement="right" title="High priority"></i>
                            }
                            else if (item.Priority.Equals(102004)||item.Priority.Equals(102005))
                            {
                                <i class="icon_lightbulb" style="color:blue" data-toggle="tooltip" data-placement="right" title="To be delivered post re-confirming"></i>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VolunteerCode)
                        </td>
                        <td>
                            @if (item.StatusOfRequest.Equals(0) || item.StatusOfRequest.Equals(101003))
                            {
                                <i class="icon_clock_alt" style="color:orangered"></i>
                            }
                            else
                            {

                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success reqDetail" data-toggle="modal" data-target="#myModal" data-id="@item.Id"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger delReq" data-toggle="modal" data-target="#myModal" data-id="@item.Id"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
