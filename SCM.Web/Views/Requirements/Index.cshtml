@model IEnumerable<SCM.Business.DbModel.Requirements>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <section class="panel">
        <header class="panel-heading">
            List of requirements
        </header>
        <p>
            <a class="btn btn-primary" asp-action="Create" role="button">Create New</a>
        </p>

        <table class="table table-striped table-advance table-hover">
            <thead>
                <tr>
                    <th><i class="icon_profile"></i> Name</th>
                    <th>
                        Age
                    </th>
                    <th>
                        Description
                    </th>
                    <th><i class="icon_mobile"></i> Mobile</th>
                    <th>
                        Due date
                    </th>
                    <th>
                        Priority
                    </th>
                    <th>
                        Status
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequirerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequirementDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ContactNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RequestDueDate)
                        </td>
                        <td>
                            @if (item.Priority.Equals(0))
                            {
                                <i class="icon_clock_alt"></i>
                            }
                            else
                            {

                            }
                        </td>
                        <td>
                            @if (item.StatusOfRequest.Equals(0) || item.StatusOfRequest.Equals(101103))
                            {
                                <i class="icon_clock_alt"></i>
                            }
                            else
                            {

                            }
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success reqDetail" data-toggle="modal" data-target="#myModal" data-id="@item.Id"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="icon_close_alt2"></i></a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</div>
